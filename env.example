# Environment Configuration for MLSDM Governed Cognitive Memory
# ==============================================================
#
# Copy this file to .env and customize for your environment.
# These variables override settings in config/*.yaml files.

# ============================================================
# API Configuration
# ============================================================

# API authentication key (required for production)
API_KEY=your-secret-key-here-change-in-production

# Configuration file path
CONFIG_PATH=config/default_config.yaml

# ============================================================
# System Configuration Overrides
# ============================================================
# Override any config setting using MLSDM_<KEY> format
# For nested settings, use double underscores: MLSDM_<SECTION>__<KEY>

# Vector dimension (must match embedding model)
# MLSDM_DIMENSION=384

# Strict mode (disable in production for performance)
# MLSDM_STRICT_MODE=false

# ============================================================
# Memory Configuration Overrides
# ============================================================

# L1 decay rate (short-term memory)
# MLSDM_MULTI_LEVEL_MEMORY__LAMBDA_L1=0.5

# L2 decay rate (medium-term memory)
# MLSDM_MULTI_LEVEL_MEMORY__LAMBDA_L2=0.1

# L3 decay rate (long-term memory)
# MLSDM_MULTI_LEVEL_MEMORY__LAMBDA_L3=0.01

# ============================================================
# Moral Filter Configuration Overrides
# ============================================================

# Initial moral threshold (0.0-1.0, higher = stricter)
# MLSDM_MORAL_FILTER__THRESHOLD=0.5

# Adaptation rate (0.0-0.5)
# MLSDM_MORAL_FILTER__ADAPT_RATE=0.05

# Minimum threshold bound
# MLSDM_MORAL_FILTER__MIN_THRESHOLD=0.3

# Maximum threshold bound
# MLSDM_MORAL_FILTER__MAX_THRESHOLD=0.9

# ============================================================
# Cognitive Rhythm Configuration Overrides
# ============================================================

# Wake phase duration (active processing)
# MLSDM_COGNITIVE_RHYTHM__WAKE_DURATION=8

# Sleep phase duration (consolidation)
# MLSDM_COGNITIVE_RHYTHM__SLEEP_DURATION=3

# ============================================================
# Security & Rate Limiting
# ============================================================

# Disable rate limiting (only for testing)
# DISABLE_RATE_LIMIT=0

# ============================================================
# Advanced Security Features (v1.1)
# ============================================================
# These are disabled by default. Enable selectively based on deployment needs.
# For production hardening, see env.prod.example

# OIDC Authentication (enterprise SSO)
# MLSDM_SECURITY_ENABLE_OIDC=0

# Mutual TLS (zero-trust networking)
# MLSDM_SECURITY_ENABLE_MTLS=0

# Role-Based Access Control
# MLSDM_SECURITY_ENABLE_RBAC=0

# Request Signature Verification
# MLSDM_SECURITY_ENABLE_REQUEST_SIGNING=0

# Policy-as-Code Engine
# MLSDM_SECURITY_ENABLE_POLICY_ENGINE=0

# LLM Output Guardrails
# MLSDM_SECURITY_ENABLE_GUARDRAILS=0

# LLM Safety Analysis
# MLSDM_SECURITY_ENABLE_LLM_SAFETY=0

# PII Scrubbing in Logs
# MLSDM_SECURITY_ENABLE_PII_SCRUB_LOGS=0

# Multi-Tenant Data Isolation
# MLSDM_SECURITY_ENABLE_MULTI_TENANT_ENFORCEMENT=0

# ============================================================
# Logging & Monitoring
# ============================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
# LOG_LEVEL=INFO

# Enable structured JSON logging
# JSON_LOGGING=true

# ============================================================
# Notes
# ============================================================
# - Never commit .env files with real credentials to version control
# - Use secrets management in production (AWS Secrets Manager, etc.)
# - Validate all overrides against schema in src/utils/config_schema.py
# - See env.prod.example for production security configuration
# - See DEPLOYMENT_GUIDE.md for production best practices
