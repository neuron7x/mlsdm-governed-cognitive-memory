# ====================================================
# Multi-stage Dockerfile for NeuroCognitiveEngine Service
# ====================================================

# Stage 1: Build dependencies
FROM python:3.11-slim as builder

WORKDIR /build

# Install build dependencies
RUN apt-get update && apt-get install -y \
    --no-install-recommends \
    gcc \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install dependencies
COPY requirements.txt .
COPY pyproject.toml .
COPY README.md .

# Create virtual environment and install dependencies
RUN python -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Copy source code and install package
COPY src/ ./src/
RUN pip install --no-cache-dir -e .

# Stage 2: Runtime
FROM python:3.11-slim

WORKDIR /app

# Create non-root user
RUN useradd -m -u 1000 neuro && \
    mkdir -p /app && \
    chown -R neuro:neuro /app

# Copy virtual environment from builder
COPY --from=builder --chown=neuro:neuro /opt/venv /opt/venv

# Copy application code
COPY --chown=neuro:neuro src/ ./src/
COPY --chown=neuro:neuro pyproject.toml .
COPY --chown=neuro:neuro README.md .
COPY --chown=neuro:neuro config/ ./config/

# Set environment
ENV PATH="/opt/venv/bin:$PATH" \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    # Default configuration
    HOST="0.0.0.0" \
    PORT="8000" \
    LLM_BACKEND="local_stub" \
    ENABLE_FSLGS="true" \
    ENABLE_METRICS="true" \
    EMBEDDING_DIM="384" \
    MLSDM_RUNTIME_MODE="cloud-prod" \
    MLSDM_SECURE_MODE="1"

# Switch to non-root user
USER neuro

# Health check - using liveness endpoint
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import requests; requests.get('http://localhost:8000/health/liveness').raise_for_status()" || exit 1

# Expose port
EXPOSE 8000

# Run the service
CMD ["python", "-m", "mlsdm.entrypoints.cloud"]
